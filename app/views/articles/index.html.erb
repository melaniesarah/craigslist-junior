<h1>Listing <%= @articles[1].category.name.capitalize %> Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>

    <!-- /posts/:post_id/comments/:id -->
    <td><%= link_to 'Show', [article.category, article] %></td>
    <!-- /posts/:post_id/comments/:id/edit -->
    <td><%= link_to 'Edit', edit_category_article_path(article.category, article)%></td>
    <!-- /posts/:post_id/comments/:id -->
    <td><%= link_to 'Destroy', [article.category, article], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

